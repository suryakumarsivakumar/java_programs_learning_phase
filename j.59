public class Main {
    public static void main(String[] args) {
        int[] numbers = {1,2,3,4};
        double sum=0;
        double product=1;
        double average;

        for(int i=0;i<numbers.length;i++){
            sum+=numbers[i];
            product*=numbers[i];
        }
        average=sum/numbers.length;
        System.out.println("sum:"+sum+"product:"+product+"average"+average);
    }
}
